<% if @report.length > 0 %>
    <h3>Results:</h3>
    <div class="row">
      <div id="chart">
      </div>
      <%= render_chart(@chart, 'chart') %>
    </div>
    <hr />
    <div class="row">
      <table class="table table-striped table-bordered">
        <thead>
            <th>Date</th>
            <th>Count Leads</th>
        </thead>
        <tbody>
            <% @report.each do |item| %>
                <tr>
                  <td><%= item.date %></td>
                  <td><%= item.cnt %></td>
                </tr>
            <% end %>
        </tbody>
      </table>
    </div>
<% else %>
    <h4>No match results</h4>
<% end %>