<%= form_for @lead, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :interested_company_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :interested_company_id, BusinessEntity.all, :id, :name_short_or_name, :class => 'select_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :lead_source, :class => 'control-label' %>
    <div class="controls">
      <%= f.grouped_collection_select :lead_source_id, LeadSourceGroup.all, :lead_sources, :name, :id, :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :status, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :status, :class => 'select_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :contract_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :contract_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                leads_path, :class => 'btn' %>
  </div>
<% end %>
