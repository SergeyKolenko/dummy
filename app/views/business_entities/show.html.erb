<%- model_class = BusinessEntity -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @business_entity.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name_short) %>:</strong></dt>
  <dd><%= @business_entity.name_short %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', default: t("helpers.links.back")),
              business_entities_path, class: 'btn'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_business_entity_path(@business_entity), class: 'btn' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              business_entity_path(@business_entity),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>
